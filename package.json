{
  "name": "neornd",
  "version": "2.4.1",
  "description": "Export random number with crypto",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "jest",
    "ts": "node --experimental-specifier-resolution=node --loader ts-node/esm src/index.ts",
    "lint": "eslint ./ --ext '**/*.ts'",
    "format": "yarn format:eslint && yarn format:prettier",
    "format:eslint": "eslint --fix '**/*.ts'",
    "format:prettier": "prettier --write '**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kota-yata/neornd.git"
  },
  "keywords": [
    "crypto",
    "neornd",
    "random",
    "math",
    "simplify",
    "number"
  ],
  "author": "Kota Yatagai",
  "type": "module",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kota-yata/neornd/issues"
  },
  "devDependencies": {
    "@types/jest": "^28.1.6",
    "@types/node": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^4.2.5",
    "jest": "^28.1.3",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "lint-staged": {
    "*.ts": [
      "yarn format"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
